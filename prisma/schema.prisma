generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Incident {
  id        Int      @id @default(autoincrement())
  title     String
  status    String
  severity  String
  createdAt DateTime @default(now())
  tasks     Task[]
  logs      Log[]
}

model Task {
  id          Int      @id @default(autoincrement())
  description String
  status      String
  incidentId  Int
  incident    Incident @relation(fields: [incidentId], references: [id])
}

model Log {
  id          Int      @id @default(autoincrement())
  message     String
  createdAt   DateTime @default(now())
  incidentId  Int
  incident    Incident @relation(fields: [incidentId], references: [id])
}
